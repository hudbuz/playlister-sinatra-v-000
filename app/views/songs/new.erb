<title>New Song</title>
</head>
<body>

<h1>Create a New Song</h1>

<form action="/songs" method="POST">
  <label>Name:</label>
  
  <br></br>
  
  <input type="text" name="song[name]"  id="Name">
  
  <br></br>
  <% @artists.each do |artist|%>
    <input type="checkbox" name="song[artist_id][]" id="<%artist.name%>" value="<%=artist.id%>"><%=artist.name%></input><br>
  <%end%>

  <label>and/or, create a new owner:</label>
  <br></br>
  <label>name:</label>
  <input  type="text" name="artist_name" id="Artist Name"></input>
  <br></br>

  <br></br>
  <% @genres.each do |genre|%>
    <input type="checkbox" name="song[genre_id][]" value="<%=genre.id%>" id="<%=genre.name%>"><%=genre.name%></input><br>
  <%end%>

  <label>and/or, create a new owner:</label>
  <br></br>
  <label>name:</label>
  <input  type="text" name="genre_name"></input>
  <br></br>

  <input type="submit" value="Create Song">
</form>

</body>
</html>
